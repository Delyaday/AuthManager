<UserControl x:Class="AuthManager.MVVM.View.ListOfResidents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AuthManager.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="List of residents: "
                       Foreground="Black"
                       FontSize="25"
                   FontWeight="Bold"
                   Grid.Row="0"/>

        <ListView x:Name="listOfusers" Margin="10" Grid.Row="1"/>
    </Grid>
</UserControl>
